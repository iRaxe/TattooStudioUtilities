# TinkStudio Production Environment Variables
# Copy this file to .env and customize the values for your deployment

# Database Configuration
POSTGRES_PASSWORD=tinkstudio_secure_password_change_this
DATABASE_URL=postgresql://postgres:tinkstudio_secure_password_change_this@postgres:5432/tinkstudio

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=7d

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123_change_this

# Application Configuration
NODE_ENV=production
PORT=3001
GIFT_CARD_VALIDITY_MONTHS=4
CLAIM_TOKEN_TTL_MINUTES=10080

# Public URLs (change to your domain)
PUBLIC_BASE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://yourdomain.com/api

# Redis Configuration (optional)
REDIS_PASSWORD=tinkstudio_redis_password_change_this
REDIS_URL=redis://:tinkstudio_redis_password_change_this@redis:6379

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=TinkStudio <noreply@yourdomain.com>

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# Security
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=another-super-secret-session-key-change-this

# Monitoring
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100